# .env.example
# StoreScorer Environment Variables
# Copy to .env.local and fill in values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/storescorer_dev"

# For local development with Docker
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/storescorer_dev"

# For production (AWS RDS example)
# DATABASE_URL="postgresql://app_api:PASSWORD@your-rds-instance.region.rds.amazonaws.com:5432/storescorer"

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs
STRIPE_PRICE_ID_PRO="price_..."
STRIPE_PRICE_ID_ENTERPRISE="price_..."

# =============================================================================
# OPENAI / AI SERVICES
# =============================================================================
OPENAI_API_KEY="sk-..."

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="StoreScorer"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_AUDITS_PER_DAY=10
RATE_LIMIT_CHAT_MESSAGES_PER_DAY=50

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST=""

# =============================================================================
# OPTIONAL: ERROR TRACKING
# =============================================================================
# SENTRY_DSN=""
# NEXT_PUBLIC_SENTRY_DSN=""
